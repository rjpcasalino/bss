# Where things are
source              : .
destination         : ./_site
templates_dir       : templates
data_dir            : _data

# Handling Reading
safe                : false
include             : [""]
exclude             : ["_site", "*.md"]
encoding            : "utf-8"
markdown_ext        : "markdown,mkdown,mkdn,mkd,md"

# Filtering Content
show_drafts         : false

# Serving
detach              : false
port                : 1988
host                : 127.0.0.1
baseurl             : "" # does not include hostname

